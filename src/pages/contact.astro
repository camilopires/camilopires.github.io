<style is:global>
  .stardust {
    position: fixed;
    pointer-events: none;
    font-size: 1.5rem;
    z-index: 9999;
  }
</style>

<script is:inline>
  (function() {
    const magicButton = document.getElementById('magic-button');
    const animationToggle = document.getElementById('animation-toggle');
    const toggleKnob = animationToggle ? animationToggle.querySelector('span[aria-hidden="true"]') : null;

    // Helper to update toggle visual state
    function updateToggleVisual(isOn) {
      if (!animationToggle || !toggleKnob) return;
      animationToggle.setAttribute('aria-checked', String(isOn));
      if (isOn) {
        animationToggle.classList.remove('bg-gray-300');
        animationToggle.classList.add('bg-purple-500');
        toggleKnob.classList.remove('translate-x-0.5');
        toggleKnob.classList.add('translate-x-4');
      } else {
        animationToggle.classList.remove('bg-purple-500');
        animationToggle.classList.add('bg-gray-300');
        toggleKnob.classList.remove('translate-x-4');
        toggleKnob.classList.add('translate-x-0.5');
      }
    }

    // Respect prefers-reduced-motion system setting
    if (window.matchMedia('(prefers-reduced-motion: reduce)').matches) {
      updateToggleVisual(false);
    }

    // Handle toggle switch
    if (animationToggle) {
      animationToggle.addEventListener('click', function() {
        var isChecked = animationToggle.getAttribute('aria-checked') === 'true';
        updateToggleVisual(!isChecked);
      });
    }

    // Handle magic button click
    if (magicButton) {
      magicButton.addEventListener('click', function() {
        // Check if animations are enabled
        if (!animationToggle || animationToggle.getAttribute('aria-checked') !== 'true') {
          return;
        }

        var rect = magicButton.getBoundingClientRect();
        var centerX = rect.left + rect.width / 2;
        var centerY = rect.top + rect.height / 2;

        // Create multiple stardust particles
        var particles = ['‚ú®', '‚≠ê', 'üåü', 'üí´', '‚ú®'];
        var particleCount = 25;

        for (var i = 0; i < particleCount; i++) {
          (function(index) {
            setTimeout(function() {
              var particle = document.createElement('span');
              particle.className = 'stardust';
              particle.textContent = particles[Math.floor(Math.random() * particles.length)];

              // Start from center of button
              particle.style.left = centerX + 'px';
              particle.style.top = centerY + 'px';
              particle.style.fontSize = (1 + Math.random() * 1.5) + 'rem';

              document.body.appendChild(particle);

              // Random direction for confetti burst
              var angle = Math.random() * Math.PI * 2;
              var velocity = 150 + Math.random() * 150;
              var endX = Math.cos(angle) * velocity;
              var endY = Math.sin(angle) * velocity + 100;
              var rotation = Math.random() * 720 - 360;
              var duration = 1000 + Math.random() * 500;

              // Animate using Web Animations API
              var animation = particle.animate([
                {
                  transform: 'translate(-50%, -50%) rotate(0deg) scale(1)',
                  opacity: 1
                },
                {
                  transform: 'translate(calc(-50% + ' + endX + 'px), calc(-50% + ' + endY + 'px)) rotate(' + rotation + 'deg) scale(0.2)',
                  opacity: 0
                }
              ], {
                duration: duration,
                easing: 'cubic-bezier(0.25, 0.46, 0.45, 0.94)'
              });

              animation.onfinish = function() { particle.remove(); };
            }, index * 20);
          })(i);
        }
      });
    }
  })();
</script>
