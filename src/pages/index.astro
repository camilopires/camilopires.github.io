---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import { Image } from 'astro:assets';
import { MAINTENANCE_CONFIG } from '../config/maintenance';
import headshotImage from '../assets/CP Headshot.jpg';
---

{MAINTENANCE_CONFIG.enabled ? (
  <meta http-equiv="refresh" content="0;url=/maintenance/" />
) : (
  <Layout 
    title="Camilo Pires - Product Manager & App Developer"
    description="Product Manager & App Developer passionate about creating impactful and inclusive digital experiences. Expert in iOS development, UX design, and accessibility consulting."
    image="/images/CP Headshot.jpg"
    type="profile"
    tags={["Product Manager", "iOS Developer", "UX Designer", "Accessibility", "Swift", "SwiftUI"]}
  >
    <Header />
    <main id="main-content" class="pt-8">

      <!-- Hero Section -->
      <section class="bg-gradient-to-r from-blue-600 to-purple-600 text-white py-20">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
          <h1 class="text-4xl md:text-6xl font-bold mb-6">Hi, I'm Camilo Pires</h1>
          <p class="text-xl md:text-2xl mb-8">Product Manager & App Developer passionate about creating impactful and inclusive digital experiences</p>
          <div class="space-x-4">
            <a href="/projects/" class="bg-white text-blue-600 px-6 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors inline-block" aria-label="View my portfolio projects">View My Work</a>
            <a href="/contact/" class="border-2 border-white text-white px-6 py-3 rounded-lg font-semibold hover:bg-white hover:text-blue-600 transition-colors inline-block" aria-label="Get in touch with me">Get In Touch</a>
          </div>
        </div>
      </section>

      <!-- About Section -->
      <section class="py-20 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="grid md:grid-cols-2 gap-12 items-center">
            <div>
              <h2 class="text-3xl font-bold text-gray-900 mb-6">About Me</h2>
              <p class="text-lg text-gray-600 mb-6">
                I'm a product manager and app developer with a passion for creating user-centred digital solutions. With expertise in both product strategy and technical implementation, I bridge the gap between business objectives and technical execution. I also champion accessibility, ensuring digital experiences are inclusive for everyone.
              </p>
              <p class="text-lg text-gray-600 mb-8">
                My approach combines data-driven decision making with creative problem solving to deliver products that users love and businesses value.
              </p>
              <div class="grid grid-cols-2 gap-4">
                <div class="text-center p-4 bg-gray-50 rounded-lg">
                  <h3 class="font-semibold text-gray-900 text-lg">Product Management</h3>
                  <p class="text-sm text-gray-700 mt-2">Strategy, roadmap, and stakeholder management</p>
                </div>
                <div class="text-center p-4 bg-gray-50 rounded-lg">
                  <h3 class="font-semibold text-gray-900 text-lg">App Development</h3>
                  <p class="text-sm text-gray-700 mt-2">iOS development with Swift and modern frameworks</p>
                </div>
                <div class="text-center p-4 bg-gray-50 rounded-lg">
                  <h3 class="font-semibold text-gray-900 text-lg">User Experience</h3>
                  <p class="text-sm text-gray-700 mt-2">Research, design, and accessibility consulting</p>
                </div>
                <div class="text-center p-4 bg-gray-50 rounded-lg">
                  <h3 class="font-semibold text-gray-900 text-lg">Public Speaking</h3>
                  <p class="text-sm text-gray-700 mt-2">Conference presentations and accessibility advocacy</p>
                </div>
              </div>
            </div>
            <div class="flex flex-col items-center">
              <Image 
                src={headshotImage} 
                alt="Camilo Pires - Product Manager and App Developer" 
                width={512}
                height={512}
                class="w-64 h-64 object-cover rounded-full shadow-lg mb-6"
                loading="eager"
                sizes="(max-width: 768px) 256px, 512px"
                quality={95}
                format="webp"
              />
              <h3 class="text-2xl font-bold text-gray-900 mb-6">What I Do</h3>
              <ul class="space-y-4">
                <li class="flex items-start">
                  <span class="text-green-500 mr-3 mt-1">✓</span>
                  <span class="text-gray-700">Product strategy and roadmap development</span>
                </li>
                <li class="flex items-start">
                  <span class="text-green-500 mr-3 mt-1">✓</span>
                  <span class="text-gray-700">iOS app development with Swift</span>
                </li>
                <li class="flex items-start">
                  <span class="text-green-500 mr-3 mt-1">✓</span>
                  <span class="text-gray-700">User research and UX design</span>
                </li>
                <li class="flex items-start">
                  <span class="text-green-500 mr-3 mt-1">✓</span>
                  <span class="text-gray-700">Accessibility consulting and user testing</span>
                </li>
                <li class="flex items-start">
                  <span class="text-green-500 mr-3 mt-1">✓</span>
                  <span class="text-gray-700">Agile project management</span>
                </li>
                <li class="flex items-start">
                  <span class="text-green-500 mr-3 mt-1">✓</span>
                  <span class="text-gray-700">Public speaking and accessibility advocacy</span>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </section>

      <!-- Projects Section -->
      <section class="py-20 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <h2 class="text-3xl font-bold text-gray-900 text-center mb-12">Featured Projects</h2>
          <div class="grid md:grid-cols-2 gap-8">
            <article class="bg-white rounded-lg shadow-md overflow-hidden">
              <div class="p-6">
                <h3 class="text-xl font-semibold text-gray-900 mb-2">BoxingScorecard</h3>
                <p class="text-gray-600 mb-4">A professional iOS app for scoring boxing matches with real-time round tracking and comprehensive fight statistics.</p>
                <div class="flex flex-wrap gap-2 mb-4">
                  <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800 border border-blue-200 shadow-sm">iOS</span>
                  <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800 border border-green-200 shadow-sm">SwiftUI</span>
                  <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-orange-100 text-orange-800 border border-orange-200 shadow-sm">Core Data</span>
                  <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-purple-100 text-purple-800 border border-purple-200 shadow-sm">CloudKit</span>
                </div>
                <a href="/projects/boxingscorecard" class="text-blue-600 hover:text-blue-800 font-semibold">Learn More →</a>
              </div>
            </article>
            <article class="bg-white rounded-lg shadow-md overflow-hidden">
              <div class="p-6">
                <h3 class="text-xl font-semibold text-gray-900 mb-2">Project Coming Soon</h3>
                <p class="text-gray-600 mb-4">More exciting projects are in development. Stay tuned for updates!</p>
                <div class="flex flex-wrap gap-2 mb-4">
                  <span class="bg-yellow-100 text-yellow-800 px-2 py-1 rounded text-sm">In Progress</span>
                </div>
              </div>
            </article>
          </div>
        </div>
      </section>

      <!-- CTA Section -->
      <aside class="py-20 bg-blue-600 text-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
          <h2 class="text-3xl font-bold mb-6">Let's Work Together</h2>
          <p class="text-xl mb-8">I work full-time at Indeed but am happy to help out where I can. I'm always interested in new opportunities and exciting projects.</p>
          <a href="/contact/" class="bg-white text-blue-600 px-8 py-4 rounded-lg font-semibold hover:bg-gray-100 transition-colors inline-block" aria-label="Get in touch to discuss opportunities">Get In Touch</a>
        </div>
      </aside>
    </main>
  </Layout>
)}
