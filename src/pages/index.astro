    <main id="main-content" class="pt-8">

      <!-- Hero Section -->
      <section class="bg-gradient-to-r from-blue-600 to-purple-600 text-white py-20">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
          <h1 class="text-4xl md:text-6xl font-bold mb-6">Hi, I'm Camilo Pires</h1>
          <p class="text-xl md:text-2xl mb-8">Product Manager & App Developer passionate about creating impactful digital experiences</p>
          <div class="space-x-4">
