  <script type="module">
    import Swiper from 'https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.mjs';
    
    // Swiper initialization
    document.addEventListener('DOMContentLoaded', function() {
      console.log('‚úÖ Swiper ES module loaded successfully!');
      
      const caption = document.getElementById('carousel-caption');
      
      // Caption text for each slide
      const captions = [
        'Main Scoring Interface - Professional boxing scoring with the official 10-point must system',
        'Round Management - Real-time scoring updates and seamless round navigation',
        'Fight Statistics - Comprehensive analytics and performance metrics dashboard',
        'Fighter Profiles - Detailed records and performance history management',
        'Scorecard Generation - Professional scorecard creation and sharing features',
        'Additional Features - Advanced functionality and enhanced user experience'
      ];
      
      try {
        // Initialize Swiper
        const swiper = new Swiper('.swiper', {
        // Optional parameters
        direction: 'horizontal',
        loop: false,
        speed: 400,
        effect: 'slide',
        
        // Enable autoplay (optional)
        autoplay: {
          delay: 5000,
          disableOnInteraction: true,
        },
        
        // Navigation arrows
        navigation: {
          nextEl: '.swiper-button-next',
          prevEl: '.swiper-button-prev',
        },
        
        // Pagination (dots)
        pagination: {
          el: '.swiper-pagination',
          clickable: true,
          type: 'bullets',
        },
        
        // Keyboard control
        keyboard: {
          enabled: true,
          onlyInViewport: false,
        },
        
        // Touch/swipe settings
        touchRatio: 1,
        touchAngle: 45,
        simulateTouch: true,
        
        // Accessibility
        a11y: {
          prevSlideMessage: 'Previous screenshot',
          nextSlideMessage: 'Next screenshot',
          firstSlideMessage: 'This is the first screenshot',
          lastSlideMessage: 'This is the last screenshot',
        },
        
        // Events
        on: {
          slideChange: function () {
            // Update caption when slide changes
            if (caption && captions[swiper.activeIndex]) {
              caption.textContent = captions[swiper.activeIndex];
            }
          },
          init: function () {
            // Set initial caption
            if (caption && captions[0]) {
              caption.textContent = captions[0];
            }
          }
        }
      });
      
      console.log('üéâ Swiper carousel initialized successfully!');
      
      } catch (error) {
        console.error('‚ùå Error initializing Swiper:', error);
      }
    });
  </script>
  
