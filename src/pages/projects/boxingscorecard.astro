    // Carousel functionality
    document.addEventListener('DOMContentLoaded', function() {
      const container = document.getElementById('carousel-container');
      const prevBtn = document.getElementById('prev-btn');
      const nextBtn = document.getElementById('next-btn');
      const dots = document.querySelectorAll('.dot');
      const caption = document.getElementById('carousel-caption');
      
      // Check if all required elements exist
      if (!container || !prevBtn || !nextBtn || !caption) {
        console.error('Carousel elements not found');
        return;
      }
      
      let currentSlide = 0;
      const totalSlides = 6;
      
      // Caption text for each slide
      const captions = [
        'Main Scoring Interface - Professional boxing scoring with the official 10-point must system',
        'Round Management - Real-time scoring updates and seamless round navigation',
        'Fight Statistics - Comprehensive analytics and performance metrics dashboard',
        'Fighter Profiles - Detailed records and performance history management',
        'Scorecard Generation - Professional scorecard creation and sharing features',
        'Additional Features - Advanced functionality and enhanced user experience'
      ];
      
      // Function to update carousel position
      function updateCarousel() {
        if (!container || !caption) return;
        
        const translateX = -currentSlide * 320; // 320px is the width of each slide
        container.style.transform = `translateX(${translateX}px)`;
        
        // Update dots
        dots.forEach((dot, index) => {
          if (index === currentSlide) {
            dot.classList.remove('bg-gray-300', 'hover:bg-gray-400');
            dot.classList.add('bg-blue-600');
          } else {
            dot.classList.remove('bg-blue-600');
            dot.classList.add('bg-gray-300', 'hover:bg-gray-400');
          }
        });
        
        // Update caption
        caption.textContent = captions[currentSlide];
      }
      
      // Next button click
      nextBtn.addEventListener('click', function() {
        currentSlide = (currentSlide + 1) % totalSlides;
        updateCarousel();
      });
      
      // Previous button click
      prevBtn.addEventListener('click', function() {
        currentSlide = (currentSlide - 1 + totalSlides) % totalSlides;
        updateCarousel();
      });
      
      // Dot navigation
      dots.forEach((dot, index) => {
        dot.addEventListener('click', function() {
          currentSlide = index;
          updateCarousel();
        });
      });
      
      // Keyboard navigation
      document.addEventListener('keydown', function(e) {
        if (e.key === 'ArrowLeft') {
          currentSlide = (currentSlide - 1 + totalSlides) % totalSlides;
          updateCarousel();
        } else if (e.key === 'ArrowRight') {
          currentSlide = (currentSlide + 1) % totalSlides;
          updateCarousel();
        }
      });
      
      // Touch/swipe support for mobile
      let startX = 0;
      let endX = 0;
      
      if (container) {
        container.addEventListener('touchstart', function(e) {
          startX = e.touches[0].clientX;
        });
        
        container.addEventListener('touchend', function(e) {
          endX = e.changedTouches[0].clientX;
          handleSwipe();
        });
      }
      
      function handleSwipe() {
        const swipeThreshold = 50;
        const diff = startX - endX;
        
        if (Math.abs(diff) > swipeThreshold) {
          if (diff > 0) {
            // Swipe left - next slide
            currentSlide = (currentSlide + 1) % totalSlides;
          } else {
            // Swipe right - previous slide
            currentSlide = (currentSlide - 1 + totalSlides) % totalSlides;
          }
          updateCarousel();
        }
      }
      
      // Initialize carousel
      updateCarousel();
    });
  </script>
