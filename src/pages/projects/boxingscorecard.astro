  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
  
  <!-- Import Swiper JS using ES modules -->
  <script type="module">
    import Swiper from 'https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.mjs';
    
    // Swiper initialization
    document.addEventListener('DOMContentLoaded', function() {
      console.log('‚úÖ Swiper ES module loaded successfully!');
      
      const caption = document.getElementById('carousel-caption');
      
      // Caption text for each slide
      const captions = [
        'Scoring Interface - Round-by-round scoring with 10-point must system',
        'Boxer Setup - Enter fighter names and match configuration',
        'Home Screen - Main menu with New Fight button and Recent Fights list',
        'Knockdown & Point Deduction Tracking - Track fight events and scoring adjustments',
        'End Fight Early - Stop matches due to knockout or technical decision'
      ];
      
      try {
        // Get accessibility controls
        const autoplayToggle = document.getElementById('autoplay-toggle');
        let isAutoplayActive = true;
        
        // Initialize Swiper
        const swiper = new Swiper('.swiper', {
          // Optional parameters
          direction: 'horizontal',
          loop: true,
          speed: 600,
          effect: 'slide',
          
          // Enable autoplay with continuous scrolling
          autoplay: {
            delay: 3000,
            disableOnInteraction: false,
            pauseOnMouseEnter: true,
            waitForTransition: true,
          },
          
          // Navigation arrows
          navigation: {
            nextEl: '.swiper-button-next',
            prevEl: '.swiper-button-prev',
          },
          
          // Pagination (dots)
          pagination: {
            el: '.swiper-pagination',
            clickable: true,
            type: 'bullets',
            renderBullet: function (index, className) {
              return '<button class="' + className + '" aria-label="Go to slide ' + (index + 1) + '"></button>';
            },
          },
          
          // Keyboard control
          keyboard: {
            enabled: true,
            onlyInViewport: false,
          },
          
          // Touch/swipe settings
          touchRatio: 1,
          touchAngle: 45,
          simulateTouch: true,
          
          // Smooth transitions
          cssMode: false,
          watchSlidesProgress: true,
          
          // Enhanced Accessibility (Swiper native)
          a11y: {
            enabled: true,
            prevSlideMessage: 'Previous screenshot',
            nextSlideMessage: 'Next screenshot',
            firstSlideMessage: 'This is the first screenshot',
            lastSlideMessage: 'This is the last screenshot',
            paginationBulletMessage: 'Go to screenshot {{index}}',
          },
          
          // Events
          on: {
            slideChange: function (swiperInstance) {
              // Update caption when slide changes
              if (caption && captions[swiperInstance.activeIndex]) {
                caption.textContent = captions[swiperInstance.activeIndex];
              }
            },
            init: function (swiperInstance) {
              // Set initial caption
              if (caption && captions[0]) {
                caption.textContent = captions[0];
              }
              // Start autoplay
              swiperInstance.autoplay.start();
            },
            beforeDestroy: function (swiperInstance) {
              // Clean up autoplay
              swiperInstance.autoplay.stop();
            }
          }
        });
        
        // Handle accessibility controls
        if (autoplayToggle) {
          autoplayToggle.addEventListener('click', function() {
            if (isAutoplayActive) {
              // Pause autoplay
              swiper.autoplay.stop();
              isAutoplayActive = false;
              autoplayToggle.innerHTML = `
                <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path d="M8 5v14l11-7z"/>
                </svg>
                Resume Auto-scroll
              `;
              autoplayToggle.setAttribute('aria-label', 'Resume auto-scrolling carousel');
              autoplayToggle.setAttribute('aria-pressed', 'false');
              autoplayToggle.classList.remove('bg-blue-600', 'hover:bg-blue-700');
              autoplayToggle.classList.add('bg-green-600', 'hover:bg-green-700');
            } else {
              // Resume autoplay
              swiper.autoplay.start();
              isAutoplayActive = true;
              autoplayToggle.innerHTML = `
                <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path d="M6 4h4v16H6V4zm8 0h4v16h-4V4z"/>
                </svg>
                Pause Auto-scroll
              `;
              autoplayToggle.setAttribute('aria-label', 'Pause auto-scrolling carousel');
              autoplayToggle.setAttribute('aria-pressed', 'true');
              autoplayToggle.classList.remove('bg-green-600', 'hover:bg-green-700');
              autoplayToggle.classList.add('bg-blue-600', 'hover:bg-blue-700');
            }
          });
          
          // Keyboard accessibility
          autoplayToggle.addEventListener('keydown', function(e) {
            if (e.key === 'Enter' || e.key === ' ') {
              e.preventDefault();
              autoplayToggle.click();
            }
          });
        }
        
        console.log('üéâ Swiper carousel initialized successfully!');
        
      } catch (error) {
        console.error('‚ùå Error initializing Swiper:', error);
      }
    });
  </script>
  
