---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import { Image } from 'astro:assets';
import appLogo from '../../assets/CareerCompanion/AppLogo.png';
---

<Layout title="Career Companion Project - Camilo Pires" description="Native iOS app for tracking 1:1 meetings with managers and career goals. Built with SwiftUI and CloudKit for secure, private data storage.">
  <Header />

  <main id="main-content">
    <!-- Hero Section -->
    <section class="pt-24 pb-16 px-4 sm:px-6 lg:px-8 bg-gradient-to-br from-red-50 to-blue-50" aria-labelledby="project-hero-heading">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-12">
          <div class="flex items-center justify-center mb-6">
            <Image
              src={appLogo}
              alt=""
              width={64}
              height={64}
              class="w-16 h-16 rounded-xl mr-4 shadow-lg"
              loading="eager"
              sizes="64px"
              quality={90}
              format="webp"
            />
            <h1 id="project-hero-heading" class="text-4xl sm:text-5xl font-bold text-gray-900">
              Career Companion
            </h1>
          </div>
